<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="patia.silicon.com.music_player.MainActivity">

    <LinearLayout
        android:id="@+id/inflator_linear_layout"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="444dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="444dp"
        android:background="#000000"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3f8f8282" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton

                android:id="@+id/play"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="178dp"

                android:background="@drawable/play"
                android:onClick="button" />

            <ImageButton
                android:id="@+id/forward"
                android:layout_width="44dp"
                android:layout_height="33dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="6.7dp"
                android:background="@drawable/next_play_hollow"
                android:onClick="button" />

            <ImageButton
                android:id="@+id/backward"
                android:layout_width="44dp"
                android:layout_height="33dp"
                android:layout_marginLeft="133dp"
                android:layout_marginTop="6.7dp"
                android:background="@drawable/back_play"
                android:onClick="button" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="@android:style/Animation.Translucent"
        android:layout_width="15dp"
        android:layout_height="23dp"
        android:onClick="arrow_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:background="@android:drawable/arrow_down_float"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp" />


</RelativeLayout>
